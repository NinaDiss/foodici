<main class="container col-8 content-home text-center">
  <div class="container welcome-block my-5">
    <h1>Un message de bienvenue !</h1>
    <p class="text-large">Retrouvez les commerçants de votre ville et passez commande en quelques clics.</p>
  </div>

  <div class="container my-5">
    <h3>Quel sera votre point de départ ?</h3>
    <%= simple_form_for :search, url: root_path, method: :get do |f| %>
      <div class="search-form-control form-group col-6 mt-4">
        <input class="form-control string required" type="text" name="search[query]" id="search_query" placeholder="22 rue des Ursulines, 22100 Dinan" />
      </div>
    <% end %>
  </div>

   <div class="container my-5">
    <h3>Vous vous déplacez...</h3>
    <%# Synthaxe simple form %>

    <div class="d-flex justify-content-center my-4">

      <div class="form-check d-flex flex-column align-items-center">
        <div class="form-picto-wrapper">
          <%= image_tag("picto/small_walk.svg") %>
        </div>
        <input class="form-check-input visually-hidden" type="radio" name="exampleRadios" id="toggle">
        <label class="form-check-label" for="toggle">
          à petits pas
        </label>
        <p>rayon de 500m</p>
      </div>

      <div class="form-check d-flex flex-column align-items-center">
        <div class="form-picto-wrapper active">
          <%= image_tag("picto/normal_walk.svg") %>
        </div>
        <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios1" value="option1" checked>
        <label class="form-check-label active" for="exampleRadios1">
          à pied
        </label>
        <p>rayon de 1km</p>
      </div>

      <div class="form-check d-flex flex-column align-items-center">
        <div class="form-picto-wrapper">
          <%= image_tag("picto/bicycle.svg") %>
        </div>
        <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios1" value="option1" checked>
        <label class="form-check-label" for="exampleRadios1">
          à vélo
        </label>
        <p>rayon de 1km</p>
      </div>

      <div class="form-check d-flex flex-column align-items-center">
        <div class="form-picto-wrapper">
          <%= image_tag("picto/car.svg") %>
        </div>
        <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios1" value="option1" checked>
        <label class="form-check-label" for="exampleRadios1">
          en voiture
        </label>
        <p>rayon de 1km</p>
      </div>
    </div>
    <%= link_to 'Voir les produits', products_path, class: "btn btn-primary main-btn" %>
  </div>

  <div class="container my-5">
    <h3>Les commerçants à proximité</h3>
    <div><p>map</p></div>
  </div>

</main>

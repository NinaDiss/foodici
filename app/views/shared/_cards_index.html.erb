

<div class="d-flex justify-content-around">
  <div class="row opacity-color">
  <% @products.each do |product| %>
    <div class="col-md-4">
      <%= link_to product, class: "link-product" do %>
        <div class="card-trip">
          <%#= cl_image_tag product.photo, crop: :fill, width: 400, class: "product-photo"%>
          <div class="card-trip-infos ">
            <div>
              <p><%= product.shop.name %></p>
              <h4><%= product.name %></h4>
            </div>
            <div class="card-price">

        <div class="price-currency"><%= product.price_cents %> €/<%= product.unit %></div>
      </div>
          <button class="main-cta">
          <div class="container-counter" id="container-counter">
            <div class="counter">
              -
            </div>
            <input type="text" placeholder="1">
            <div class="counter">
              +
            </div>
           </div>
          <div class="buttons" class="cta" onclick="myFunction()" >
            <div class="content" id="basket"><%= image_tag "picto/panier.svg", class: "nav-link picto", crop: :fill, width: 50 %></div>
            <div class="content" id="add">+</div>
          </div>
          </button>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
  </div>
</div>


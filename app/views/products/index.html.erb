    </li>
    <li class="nav-item">
      <% is_products_boulangerie = params[:product] == "boulangerie" %>
      <%= link_to "Boulangerie", products_path(product: "boulangerie", bio: params[:bio], query: params[:query]), class: "nav-link #{"active" if is_products_boulangerie}" %>
    </li>
    <li class="nav-item">
      <% is_products_poissonnerie = params[:product] == "poissonnerie" %>

<div class="ml-5 mt-3 ">
  <div class="form-inline mt-3">
    <%= form_tag products_path, method: :get do %>
      <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        placeholder: "ingrédient"
      %>
      <%= submit_tag "🔍", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

